<div id="right_column">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :email %><br>
    <%= f.email_field :email %></div></ br>

    <div><%= f.label :password %><br>
    <%= f.password_field :password %></div></ br>

    <% if devise_mapping.rememberable? -%>
      <div style="display: none" ><%= f.check_box :remember_me, :checked => true %> <%= f.label :remember_me %></div>
    <% end -%>

    <%= f.hidden_field :after_signin_location, :value => @after_signin_location %>

    <div><%= f.submit "Sign in" %></div>
  <% end %>
  <div class="small_text">
  <%= render :partial => "devise/shared/links" %>
  </div>
</div>

